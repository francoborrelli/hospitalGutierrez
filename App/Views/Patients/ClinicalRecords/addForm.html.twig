<form class="row" id="addRecord" method="POST" action="/patient/{{patient.id}}/records/create">
    <div class="col-md-12">
        <div class="white-box">
            <div class="user-btm-box">
                <div class="row text-center m-t-10">
                    <div class="col-md-12">
                        <strong>Fecha del control*</strong>
                        <input type="text" id="controlDate" name="controlDate" class="form-control datepicker text-center" placeholder="Seleccione la fecha de la consulta" readonly>
                    </div>
                </div>
                <hr>
                <div class="row text-center m-t-10">
                    <div class="col-md-6 b-r">
                        <strong>Peso*</strong>
                        <br>
                        <input type="number" id="weight" name="weight" class="form-control text-center" placeholder="Ingrese el peso" aria-invalid="false"
                            min="0" step="0.01">
                    </div>
                    <div class="col-md-6">
                        <strong>Talla</strong>
                        <br>
                        <input type="number" id="height" name="height" class="form-control text-center" placeholder="Ingrese el talle" aria-invalid="false"
                            min="0" step="0.01">
                    </div>
                </div>
                <hr>
                <div class="row text-center m-t-10">
                    <div class="col-md-6 b-r"><strong>¿Exámen físico normal?*</strong>
                        <br>
                        <select id="fisicTest" name="fisicTest" class="form-control">
                        <option value="">Elija una opción</option>
                        <option value="si">SI</option>
                        <option value="no">NO</option>
                        </select>
                    </div>
                    <div class="col-md-6">
                        <strong>Exámen físico observaciones*</strong>
                        <br>
                        <textarea class="form-control" id="fisicTestObservation" name="fisicTestObservation" placeholder="Ingrese las observaciones físicas"></textarea>
                    </div>
                </div>
                <hr>
                <div class="row text-center m-t-10">
                    <div class="col-md-6 b-r">
                        <strong>¿Vacunas completas?*</strong>
                        <br>
                        <select id="vaccination" name="vaccination" class="form-control">
                        <option value="">Elija una opción</option>
                        <option value="si">SI</option>
                        <option value="no">NO</option>
                        </select>
                    </div>
                    <div class="col-md-6">
                        <strong>Vacunas observaciones*</strong>
                        <br>
                        <textarea class="form-control" id="vaccinationObservation" name="vaccinationObservation" placeholder="Ingrese las observaciones de vacunación"></textarea>
                    </div>
                </div>
                <hr>
                <div class="row text-center m-t-10">
                    <div class="col-md-6 b-r">
                        <strong>¿Maduración acorde?*</strong>
                        <br>
                        <select id="maduration" name="maturation" class="form-control">
                        <option value="">Elija una opción</option>
                        <option value="si">SI</option>
                        <option value="no">NO</option>
                        </select>
                    </div>
                    <div class="col-md-6">
                        <strong>Maduración observaciones*</strong>
                        <br>
                        <textarea class="form-control" id="maturationObservation" name="maturationObservation" placeholder="Ingrese las observaciones de maduración"></textarea>
                    </div>
                </div>
                <hr>
                <div class="row text-center m-t-10">
                    <div class="col-md-6 b-r">
                        <strong>Percentilo Cefálico (PC)</strong>
                        <br>
                        <input type="number" id="pc" name="pc" class="form-control text-center" placeholder="Ingrese el valor de PC" aria-invalid="false"
                            min="0" step="0.01">
                    </div>
                    <div class="col-md-6">
                        <strong>Percentilo Perímetro Cefálico (PPC)</strong>
                        <br>
                        <input type="number" id="ppc" name="ppc" class="form-control text-center" placeholder="Ingrese el valor de PPC" aria-invalid="false"
                            min="0" step="0.01">
                    </div>
                </div>
                <hr>
                <div class="row text-center m-t-10">
                    <div class="col-md-12">
                        <strong>Alimentación</strong>
                        <br>
                        <textarea class="form-control" id="nutrition" name="nutrition" placeholder="Ingrese descripción de alimentación"></textarea>
                    </div>
                </div>
                <hr>
                <div class="row text-center m-t-10">
                    <div class="col-md-12">
                        <strong>Observaciones Generales</strong>
                        <br>
                        <textarea class="form-control" id="generalObservation" name="generalObservation" placeholder="Ingrese las observaciones generales"></textarea>
                    </div>
                </div>
                <hr>
                <small>*Campos obligatorios</small>
                <button class="btn btn-primary pull-right confirm">Confirmar</button>
                <a class="btn btn-default pull-right" href="/patient/{{ patient.id }}/records">Cancelar</a>
            </div>
        </div>
    </div>
</form>