{% for patient in data.patients %}
    <tr>
        <td>{{ patient.firstName }}</td>
        <td>{{ patient.lastName }}</td>
        <td>{{ patient.documentType.name }}</td>
        <td>{{ patient.docNumber }}</td>
        <td class="text-center">
           {% if currentUser.hasPermission('paciente_show') %}
                <div class="btn-group" role="group">
                    <a href="/patient/{{ patient.id }}" class="btn btn-sm btn-primary" title="Ver en detalle"><i class="fa fa-user" aria-hidden="true"></i></a>
                </div>
            {% endif %}
        </td>
    </tr>
    
{% endfor %}
