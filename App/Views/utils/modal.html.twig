
{% macro delete(id, action, type, person) %}

<div class="modal fade" id="{{id}}" tabindex="-1" aria-hidden="true">
    <div class="modal-dialog" role="document">
        <div class="modal-content">
            <form method="post" action="{{action}}" class="{{id}}Form">
                <div class="modal-header">
                    <h4 class="modal-title">Eliminar {{type}}</h4>
                    <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                        <span aria-hidden="true">&times;</span>
                    </button>
                </div>
                <div class="modal-body">
                    <p>Esta a punto de eliminar al {{type}} <span class="modalText">{% if person is defined %}{{ person.firstName }} {{ person.lastName }}{% endif %}</span>, ¿Está seguro que desea continuar?</p>
                </div>
                <div class="modal-footer">
                    <input type="hidden" id="deletedId" name="deletedId">
                    <button type="button" class="btn btn-primary" data-dismiss="modal">Cancelar</button>
                    <button type="submit" class="btn btn-secondary">Eliminar</button>
                </div>
            </form>
        </div>
    </div>
</div>
{% endmacro %}
