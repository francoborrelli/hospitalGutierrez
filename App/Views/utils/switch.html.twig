
{% macro item(on, off, id) %}
    <div class="text-center custom-switch custom-switch-label-io">
        <input class="custom-switch-input" id="{{id}}" name="{{ id }}"type="checkbox">
        <label class="custom-switch-btn" for="{{id}}"></label>
        <div class="custom-switch-content-checked">
            {{on}}
        </div>
        <div class="custom-switch-content-unchecked">
            {{off}}
        </div>
    </div>
{% endmacro %}
